<% provide(:title, 'Device List') %>

<div class="well">
  <h1>Devices List</h1>
</div>

<div class="row">
  <div class="col-sm-2"><b>Name</b></div>
  <div class="col-sm-2"><b>Location</b></div>
  <div class="col-sm-2"><b>Actions</b></div>
</div>

<hr/>

<% @devices.each do |device| %>

  <div class="row">
    <div class="col-sm-2"><%= device.name %></div>
    <div class="col-sm-2"><%= device.location %></div>
    <div class="col-sm-2">
      <%= link_to(device) do %>
        <span class="glyphicon glyphicon-zoom-in"></span>
      <% end %> |
      <%= link_to edit_device_path(device) do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>  |
      <%= link_to device, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    </div>
  </div>

  <hr/>
<% end %>

<%= link_to 'New Device', new_device_path %>
