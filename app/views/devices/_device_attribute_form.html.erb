<div class="device-attributes-header">

  <div class="row">

    <div class="col-xs-2">
      <div class="field form-group">
        <%= label DeviceAttribute, :name, 'Prop Name' %>
      </div>
    </div>

    <div class="col-xs-2">
      <div class="field form-group">
        <%= label DeviceAttribute, :value_type_id %>
      </div>
    </div>

    <div class="col-xs-2">
      <div class="field form-group">
        <%= label DeviceAttribute, :min_value %>
      </div>
    </div>

    <div class="col-xs-2">
      <div class="field form-group">
        <%= label DeviceAttribute, :max_value %>
      </div>
    </div>


    <div class="col-xs-2">
      <div class="field form-group">
        <%= label DeviceAttribute, :set_value %>
      </div>
    </div>

    <div class="col-xs-1">
      <div class="field form-group">
        <%= label DeviceAttribute, :current_value %>
      </div>
    </div>

    <div class="col-xs-1">
      <div class="field form-group">
        <label>Action</label>
      </div>
    </div>

  </div>

</div>

<div class="device-attributes-container">
  <%= render partial: 'device_attribute_form_element', collection: device_attributes, as: 'device_attribute' %>
</div>
