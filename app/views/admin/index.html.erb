<!-- This provides the title for the page-->
<% provide(:title, "Admin Panel") %>
<!-- Dont remove the previous -->

<h1>Value Types</h1>

<div class="row">

  <div class="col-xs-3">
    <div class="field form-group">
      <%= label ValueType, :id %>
    </div>
  </div>

  <div class="col-xs-3">
    <div class="field form-group">
      <%= label ValueType, :name %>
    </div>
  </div>

  <div class="col-xs-3">
    <div class="field form-group">
      <%= label ValueType, :primitive_type_id %>
    </div>
  </div>

  <div class="col-xs-2">
    <div class="field form-group">
      <%= label ValueType, :unsigned %>
    </div>
  </div>

  <div class="col-xs-1">
    <div class="field form-group">
      <label>Actions</label>
    </div>
  </div>

</div>

<div class="value-types-form-container">
  <%= form_tag(admin_path) do %>

    <%= render partial: 'value_type_form', collection: @value_types, as: :value_type %>

    <div class="form-group">
      <button type="button" class="action-button active add-new-value-type form-control">
        <span>New Value Type</span>
      </button>
    </div>

    <div class="actions">
      <button type="submit">Update</button>
    </div>

  <% end %>
</div>

<hr>