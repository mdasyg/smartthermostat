<div class="actions-form-container">

  <div class="actions-header">

    <div class="row">

      <div class="col-xs-5">
        <div class="form-group">
          <%= label(Action, :attribute_id, 'Attribute') %>
        </div>
      </div>

      <div class="col-xs-5">
        <div class="form-group">
          <%= label(Action, :attribute_value, 'Attribute Value') %>
        </div>
      </div>

      <div class="col-xs-2">
        <div class="form-group">
          <label>Action</label>
        </div>
      </div>

    </div>

  </div>

  <div class="actions-container">
    <% if actions.any? %>
      <%= render partial: '/actions/action_form_element', collection: actions, as: :action, locals: { prefix_for_subform: prefix_for_subform } %>
    <% end %>
  </div>

</div>
