<% provide(:title, 'Schedule Preview') %>

<div class="well">
  <h1>Schedule Overview</h1>
  <h1><%= @schedule.title %></h1>
  <h3><%= @schedule.description %></h3>
  <h4><%= @schedule.start_datetime %> - <%= @schedule.end_datetime %></h4>
</div>

<!--EVENTS -->
<h3>Events</h3>
<% if @schedule.schedule_events.any? %>

  <% @schedule.schedule_events.each do |schedule_event| %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title"><%= schedule_event.device.name %></h3>
      </div>

      <div class="panel-body">
        <% schedule_event.actions.each do |action| %>
          <%= action.inspect %> <br>
        <% end %>
      </div>
    </div>
  <% end %>

<% end %>

<%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>
